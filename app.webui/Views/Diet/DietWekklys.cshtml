                                                    <label asp-for="DietImplementation"
                                                        class="col-sm-3 col-form-label"></label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="DietImplementation" class="form-control"
                                                            placeholder="DietImplementation">
                                                        <span asp-validation-for="DietImplementation"
                                                            class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="form-group row mt-3">
                                                    <label asp-for="AvgWater" class="col-sm-3 col-form-label"></label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="AvgWater" class="form-control"
                                                            placeholder="AvgWater">
                                                        <span asp-validation-for="AvgWater" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="form-group row mt-3">
                                                    <label asp-for="AvgNmbrOfSteps"
