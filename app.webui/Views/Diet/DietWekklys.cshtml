                                                    <div class="col-sm-9">
                                                        <input asp-for="AvgNmbrOfSteps" class="form-control"
                                                            placeholder="AvgNmbrOfSteps">
                                                        <span asp-validation-for="AvgNmbrOfSteps"
                                                            class="text-danger"></span>
                                                    </div>
                                                </div>

                                                @* @Html.HiddenFor(m => m.Id , Model.Id) *@
                                                <div class="form-group row mt-sm-3">
                                                    <div class="col-sm-3 offset-sm-2">
                                                        <button type="submit"
                                                            class="btns btn-outline-info form-control">Değişiklikleri
                                                            Kaydet</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
