@model Customer
@section css{
<link rel="stylesheet" href="~/css/online.css">

}


<div class="content-wrapper" style="margin-top: 50px;">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Admin Pilates</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/admin/Home">Admin</a></li>
                        <li class="breadcrumb-item"><a href="~/admin/CustomerHome/@Model.Id">Müsteri</a></li>
                        <li class="breadcrumb-item text-danger">Pilates</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 col-lg-3">

                    <!-- Partial View -->
                    <partial name="_AdminNavbar" value="@Model">
                        <!-- Partial View -->

                </div>
                <div class="col-md-8 col-lg-9">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills asd">
                                <li class="nav-item"><a class="nav-link active" href="#activity"
                                        data-toggle="tab">Haftalık Diet</a></li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane g-0 " id="activity">
                                    <div class="post ">
                                        <div class="general-information ">
                                            <div class="card g-0" style="width:100%;border:none; ">
                                                <div class="card-body  make-flex-row center" style="border:none;">
                                                    @if (Model.Pilates != null)
                                                    {
                                                        @if (Model.Pilates.PilatesWeeks != null)
                                                        {
                                                            @foreach (var item in Model.Pilates.PilatesWeeks)
                                                            {
                                                                <a href="~/admin/CustomerPilatesWeek/@item.Id">
                                                                    @if (item.calendar != null)
                                                                    {
                                                                        <div class="m-3 make-flex-column center  bg-dark p-2 box-shadow"
                                                            style="position: relative; min-width: 150px;border-top:3px solid #ffc107;min-height: 150px;">
                                                                            <h5 class="card-title  text-white"
                                                                style="border-bottom: 2px solid black; padding-bottom:12px;">
                                                                                @item.Name</h5>
                                                                        </div>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="m-3 make-flex-column center  bg-light p-2 box-shadow"
                                                            style="position: relative; min-width: 150px;border-top:3px solid #ffc107;min-height: 150px;">
                                                                            <h5 class="card-title text-muted "
                                                                style="border-bottom: 2px solid black; padding-bottom:12px;">
                                                                                @item.Name</h5>
                                                                        </div>
                                                                    }
                                                                </a>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <div class="alert alert-danger">Pilates Paketi Yok</div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="alert alert-danger">Pilates Paketi Yok</div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts
{
<script src="~/js/online.js"></script>
}