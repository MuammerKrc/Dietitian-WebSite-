                                            <h5 class="card-title" style="font-size: 30px;">Diet Gönder</h5>
                                            <a asp-controller="admin" asp-action="DietSendAndChange"
                                                asp-route-id="@Model.Id" class="btn btn-outline-info form-control">Diyet
                                                Gönder</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="card text-danger bg-light mb-3">
                                    <div class="card-header">
                                        <h3 class="name">Randevu</h3>
                                    </div>
