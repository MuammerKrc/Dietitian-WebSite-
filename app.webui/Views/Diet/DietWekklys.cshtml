@model DietWekkly
@{
    var DietMenü = Model.DietMenü == null ? false : true;
    string path ="asd";
    if (DietMenü)
    {
         path=Model.DietMenü.Path;
    }
}
<div class="row">
    <form asp-controller="diet" asp-action="DietWekklys" method="POST" enctype="multipart/form-data">
        <div class="col-md-6">
            <h1 class="h3">1.hafta Diyet Bilgileri</h1>
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row mt-3">
                <label asp-for="CurrentWeight" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CurrentWeight" class="form-control">
                    <span asp-validation-for="CurrentWeight" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3 ">
                <label asp-for="CurrentWaistline" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CurrentWaistline" class="form-control" placeholder="CurrentWaistline">
                    <span asp-validation-for="CurrentWaistline" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-3">
                <label asp-for="CurrentBreastSize" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CurrentBreastSize" class="form-control" placeholder="CurrentBreastSize">
                    <span asp-validation-for="CurrentBreastSize" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="DietImplementation" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="DietImplementation" class="form-control" placeholder="DietImplementation">
                    <span asp-validation-for="DietImplementation" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="AvgWater" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="AvgWater" class="form-control" placeholder="AvgWater">
                    <span asp-validation-for="AvgWater" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="AvgNmbrOfSteps" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="AvgNmbrOfSteps" class="form-control" placeholder="AvgNmbrOfSteps">
                    <span asp-validation-for="AvgNmbrOfSteps" class="text-danger"></span>
                </div>
            </div>

            @Html.HiddenFor(m => m.Id , Model.Id)
            <div class="form-group row mt-sm-3">
                <div class="col-sm-2 offset-sm-2">
                    <button type="submit" class="btn btn-outline-info form-control">Değişiklikleri Kaydet</button>
                </div>
            </div>
        </div>
        <div class="col-md-4" style=" position: relative;">
            <div>
                <img src="~/img/womena.png" alt="" width="360px" height="auto">
            </div>
        </div>
        <label asp-for="DietMenü" class="col-sm-2 col-form-label"></label>
        <div class="row">
            <div class="col-sm-10">
                @if (DietMenü)
                {
                    <a href="~/diet/deneme.pdf" alt="asd">
                        <img src="/img/model3.png" alt="DietListe" width="75px" height="75px">
                    </a>
                    <div class="form-group row mt-sm-3">
                        <div class="col-sm-2 offset-sm-2">
                            <a asp-controller="admin" asp-action="DietSendAndChange" asp-route-id="@Model.Id" class="btn btn-outline-info form-control">Menüyü Değiştir</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group row mt-sm-3">
                        <div class="col-sm-2 offset-sm-2">
                            <a asp-controller="admin" asp-action="DietSendAndChange"asp-route-id="@Model.Id" class="btn btn-outline-info form-control">Diyet Gönder</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
</div>