@model RoleDetail

<h1 class="h3">Edit Role</h1>
<hr>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="RoleAndUser" asp-action="RoleEdit" method="POST">
            <input type="hidden" name="RoleId" value="@Model.Role.Id">
            <input type="hidden" name="RoleName" value="@Model.Role.Name">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="bg-info text-white p-1">Add to @Model.Role.Name</h6>

                    <table class="table table-bordered table-sm">
                        @if (Model.NonMembers.Count() == 0)
                        {
                            <thead>
                                <tr>
                                    <th colspan="2">Bütün kullanıcılar role ait</th>
                                </tr>
                              
                            </thead>
                        }
                        else
                        {
                            @foreach (var user in Model.NonMembers)
                            {
                                <thead>
                                    <tr>
                                    <td>Kullanıcı Adı</td>
                                    <td>Check</td>
                                </tr>
                                </thead>
                                <tbody>
                                    <tr >
                                        <th>@user.UserName</th>
                                        <td style="width:25px ;">
                                            <input type="checkbox" name="IdsToAdd" value="@user.Id">
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        }

                    </table>
                </div>
                <div class="col-md-6">
                    <h6 class="bg-info text-white p-1">Remove from @Model.Role.Name</h6>
                    <table class="table table-bordered table-sm">
                        @if (Model.Members.Count() == 0)
                        {
                            <thead>
                                <tr>
                                    <th colspan="2">Role ait kullanıcı yok</th>
                                </tr>
                            </thead>
                        }
                        else
                        {
                            @foreach (var user in Model.Members)
                            {
                                <thead>
                                    <tr>
                                        <th>@user.UserName</th>
                                        <td>
                                            <input type="checkbox" name="IdsToDelete" value="@user.Id">
                                        </td>
                                    </tr>
                                </thead>
                            }
                        }

                    </table>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-primary">Save Changes</button>
        </form>
    </div>
</div>